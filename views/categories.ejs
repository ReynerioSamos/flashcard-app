<%- include('partials/header') %>
    <section class="categories-section">
        <h2>Your Categories</h2>
        
        <form action="/" method="POST" class="category-form">
            <input type="text" name="title" placeholder="Category title" required>
            <textarea name="desc" placeholder="Description (optional)"></textarea>
            <button type="submit">Add Category</button>
        </form>

        <div class="category-grid">
            <% categorylist.forEach(category => { %>
                <div class="category-card">
                    <a href="/<%= category.cid %>" class="category-link">
                        <h3><%= category.title %></h3>
                        <p><%= category.desc %></p>
                        <span class="card-count"><%= category.cardCount || 0 %> cards</span>
                    </a>
                    <form action="/<%= category.cid %>?_method=DELETE" method="POST" class="delete-form">
                        <button type="submit">Delete</button>
                    </form>
                </div>
            <% }); %>
        </div>
    </section>
<%- include('partials/footer') %>